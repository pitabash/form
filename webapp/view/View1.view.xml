<mvc:View xmlns:form="sap.ui.layout.form"  
    controllerName="form.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="Form Example" showHeader="false">
					<content>
                       <form:SimpleForm title="Address"
                                        layout="ResponsiveGridLayout" >
                            <form:content>
                                <Label text="Name" />
                                <Text id="nameText" text="{/Name}" />
                                <Label text="Street/No." />
                                <Text text="{/Street} {/StreetNo}" />
                                <Label text="City" />
                                <Text text="{/City}" />
                                <Label text="Pin Code" />
                                <Text text="{/PinCode}" />
                                <Label text="District" />
                                <Text text="{/District}" />
                                <Label text="Statr" />
                                <Text text="{/State}" />
                                <Label text="Country" />
                                <Text id="countryText" text="{/Country}" />
                            </form:content>
                       </form:SimpleForm>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
